{
  "name": "@nrz/spec",
  "description": "Package specifier library",
  "version": "0.0.0-0.1730239248325",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khulnasoft/nrz.git",
    "directory": "src/spec"
  },
  "tshy": {
    "selfLink": false,
    "dialects": [
      "esm"
    ],
    "sourceDialects": [
      "@nrz/source"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts",
      "./browser": "./src/browser.ts"
    }
  },
  "dependencies": {
    "@nrz/error-cause": "workspace:*",
    "@nrz/semver": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@types/eslint__js": "catalog:",
    "@types/node": "catalog:",
    "@nrz/benchmark": "workspace:*",
    "eslint": "catalog:",
    "npm-package-arg": "^11.0.3",
    "prettier": "catalog:",
    "tap": "catalog:",
    "tshy": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "license": "BSD-2-Clause-Patent",
  "engines": {
    "node": ">=22",
    "pnpm": "9"
  },
  "scripts": {
    "benchmark": "node --no-warnings --experimental-transform-types --conditions=@nrz/source scripts/benchmark.js",
    "format": "prettier --write . --log-level warn --ignore-path ../../.prettierignore --cache",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore --cache",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "tshy",
    "presnap": "tshy",
    "snap": "tap",
    "pretest": "tshy",
    "test": "tap",
    "posttest": "tsc --project tsconfig.test.json",
    "watch": "tshy --watch"
  },
  "tap": {
    "extends": "../../tap-config.yaml"
  },
  "prettier": "../../.prettierrc.js",
  "module": "./dist/esm/index.js",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@nrz/source": "./src/index.ts",
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./browser": {
      "import": {
        "@nrz/source": "./src/browser.ts",
        "types": "./dist/esm/browser.d.ts",
        "default": "./dist/esm/browser.js"
      }
    }
  },
  "files": [
    "dist"
  ]
}
